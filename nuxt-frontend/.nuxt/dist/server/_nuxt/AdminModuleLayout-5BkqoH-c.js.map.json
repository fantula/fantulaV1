{"file":"AdminModuleLayout-5BkqoH-c.js","mappings":";;;;;;;;;;;;;;;;;AAoCA,UAAA,QAAA;AAWA,UAAA,QAAA,SAAA;AACA,cAAA;AAEA,UAAA,YAAA,IAAA,MAAA,cAAA,MAAA,KAAA,CAAA,GAAA,QAAA,EAAA;AAGA,UAAA,kBAAA,MAAA;AACE,YAAA,OAAA,MAAA;AACA,iBAAA,OAAA,MAAA,MAAA;AACE,YAAA,IAAA,UAAA,SAAA,IAAA,SAAA,IAAA,UAAA,MAAA,KAAA,CAAA,GAAA,SAAA,KAAA,WAAA,IAAA,KAAA,IAAA;AACE,oBAAA,QAAA,IAAA;AACA;AAAA,QAAA;AAAA,MACF;AAGF,UAAA,CAAA,UAAA,OAAA;AACG,kBAAA,QAAA,MAAA,cAAA,MAAA,KAAA,CAAA,GAAA,QAAA;AAAA,MAA6D;AAAA,IAChE;AAGF,UAAA,MAAA,MAAA,MAAA,iBAAA,EAAA,WAAA,MAAA;AACA,UAAA,MAAA,MAAA,YAAA,CAAA,QAAA;AAAyC,UAAA,IAAA,WAAA,QAAA;AAAA,IAA0B,CAAA;AAGnE,aAAA,MAAA;AACE,aAAA,CAAA,MAAA,WAAA,KAAA,CAAA,YAAA,MAAA,KAAA,SAAA,OAAA,CAAA;AAAA,IAAqE,CAAA;;;AAvEhE,YAAA,OAAAA,eAAAC,WAAA,EAAA,OAAA,yBAAA,MAAA,CAAA,CAAA,mBAAA;;;;;;;;;;;;;;;","names":["_ssrRenderAttrs","_mergeProps"],"sources":["../../../../components/admin/base/AdminModuleLayout.vue"],"sourcesContent":["<template>\n  <div class=\"admin-module-layout\">\n    <!-- Teleport Title and Tabs to Global Header -->\n    <ClientOnly>\n      <Teleport to=\"#header-portal\">\n        <div class=\"teleported-header\" v-if=\"showTabs\">\n           <div class=\"module-title\">{{ title }}</div>\n            <el-divider direction=\"vertical\" class=\"header-divider\" />\n            <el-tabs v-model=\"activeTab\" class=\"header-tabs\" @tab-click=\"handleTabClick\">\n               <el-tab-pane \n                 v-for=\"tab in tabs\" \n                 :key=\"tab.name\" \n                 :label=\"tab.label\" \n                 :name=\"tab.name\" \n               />\n            </el-tabs>\n        </div>\n      </Teleport>\n    </ClientOnly>\n\n    <div class=\"module-content\">\n       <slot></slot>\n    </div>\n  </div>\n</template>\n\n<script setup lang=\"ts\">\nimport { ref, computed, watch } from 'vue'\nimport { useRoute, useRouter } from 'vue-router'\n\ninterface Tab {\n  name: string\n  label: string\n  route?: string // Optional now\n}\n\nconst props = withDefaults(defineProps<{\n  title: string\n  tabs: Tab[]\n  defaultTab?: string\n  hideTabsOn?: string[]\n}>(), {\n  hideTabsOn: () => ['/post', '/edit']\n})\n\nconst emit = defineEmits(['tab-change', 'refresh'])\n\nconst route = useRoute()\nconst router = useRouter()\n\nconst activeTab = ref(props.defaultTab || props.tabs[0]?.name || '')\n\n// Update active tab based on current route (if using routing)\nconst updateActiveTab = () => {\n  const path = route.path\n  for (const tab of props.tabs) {\n    if (tab.route && (path === tab.route || (tab.route !== props.tabs[0]?.route && path.startsWith(tab.route)))) {\n      activeTab.value = tab.name\n      return\n    }\n  }\n  // If no route match, keep current or default\n  if (!activeTab.value) {\n     activeTab.value = props.defaultTab || props.tabs[0]?.name || ''\n  }\n}\n\nwatch(() => route.path, updateActiveTab, { immediate: true })\nwatch(() => props.defaultTab, (val) => { if(val) activeTab.value = val })\n\n// Hide tabs on specified paths\nconst showTabs = computed(() => {\n  return !props.hideTabsOn.some(keyword => route.path.includes(keyword))\n})\n\n// Handle tab click navigation\nconst handleTabClick = (tabInstance: any) => {\n  const name = tabInstance.props.name\n  emit('tab-change', name) // EMIT EVENT!\n\n  const targetTab = props.tabs.find(t => t.name === name)\n  if (targetTab && targetTab.route) {\n    router.push(targetTab.route)\n  }\n}\n</script>\n\n<style scoped>\n.admin-module-layout { height: 100%; display: flex; flex-direction: column; }\n.module-content { flex: 1; }\n\n/* Styles for Teleported Content */\n.teleported-header {\n    display: flex;\n    align-items: center;\n    height: 100%;\n}\n\n.module-title {\n    font-size: 20px;\n    font-weight: 700;\n    color: var(--el-text-color-primary);\n    white-space: nowrap;\n    margin-right: 15px;\n}\n\n.header-divider {\n    height: 24px;\n    margin-right: 15px;\n    border-color: var(--el-border-color);\n}\n\n.header-actions {\n    margin-left: auto;\n    display: flex;\n    align-items: center;\n    padding-right: 20px;\n}\n\n/* Customizing Tabs for Header */\n.header-tabs {\n    --el-tabs-header-height: 100%;\n}\n\n.header-tabs :deep(.el-tabs__nav-wrap::after) {\n    display: none;\n}\n\n.header-tabs :deep(.el-tabs__header) {\n    margin: 0;\n    border: none;\n}\n\n.header-tabs :deep(.el-tabs__item) {\n    font-size: 16px;\n    font-weight: 500;\n    height: 72px;\n    line-height: 72px;\n    color: var(--el-text-color-regular);\n}\n\n.header-tabs :deep(.el-tabs__item.is-active) {\n    color: var(--el-color-primary);\n    font-weight: 600;\n    font-size: 17px;\n}\n\n.header-tabs :deep(.el-tabs__active-bar) {\n    height: 3px;\n    border-radius: 2px;\n}\n</style>\n"],"version":3}