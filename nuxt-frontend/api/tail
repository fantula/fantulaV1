export interface AdminImage {
    id: string
    name: string
    url: string
    category_id: string | null
    created_at: string
    category?: AdminImageCategory
}

export interface AdminImageCategory {
    id: string
    name: string
    sort_order: number
    created_at: string
}

export interface AdminBanner {
    id: string
    image_id: string
    title: string | null
    link: string | null
    sort_order: number
    status: 'on' | 'off'
    created_at: string
    image?: AdminImage
}

